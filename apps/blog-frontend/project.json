{
  "name": "@ryanbas/blog-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/blog-frontend",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "options": {}
    },
    "serve": {
      "executor": "@nx/remix:dev",
      "options": {
        "buildTarget": "blog-frontend:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/blog-frontend/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/apps/blog-frontend"
      ],
      "options": {
        "jestConfig": "apps/blog-frontend/jest.config.ts"
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f apps/blog-frontend/Dockerfile . -t ryanbas-blog-frontend"
    }
  }
}
